# ==========================================
# CONFIGURACIÓN GENERAL DE DJANGO
# ==========================================

# Modo debug (True para desarrollo, False para producción)
DJANGO_DEBUG=True

# Secret key de Django (generar una nueva para producción)
DJANGO_SECRET_KEY=tu-secret-key-super-segura-aqui

# Hosts permitidos (separados por coma)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# BASE DE DATOS - POSTGRESQL
# ==========================================

# URL de conexión a PostgreSQL
# Formato: postgres://usuario:password@host:puerto/nombre_bd
DATABASE_URL=postgres://mediciones_user:mediciones_pass@localhost:5432/mediciones_db

# Configuración individual (alternativa a DATABASE_URL)
POSTGRES_DB=mediciones_db
POSTGRES_USER=mediciones_user
POSTGRES_PASSWORD=mediciones_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==========================================
# CONFIGURACIÓN DE CORS (Frontend)
# ==========================================

# Permitir credenciales CORS
CORS_ALLOW_CREDENTIALS=True

# Orígenes permitidos para CORS (separados por coma)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==========================================
# JWT AUTHENTICATION
# ==========================================

# Duración del access token (en minutos)
JWT_ACCESS_TOKEN_LIFETIME=60

# Duración del refresh token (en días)
JWT_REFRESH_TOKEN_LIFETIME=7

# ==========================================
# CONFIGURACIÓN DE EMAIL (Desarrollo)
# ==========================================

# Host del servidor de email
EMAIL_HOST=localhost

# Puerto del servidor de email
EMAIL_PORT=1025

# ==========================================
# DOCKER (si usas Docker)
# ==========================================

# Indica si estás usando Docker
USE_DOCKER=no

# ==========================================
# SISTEMA DE ANÁLISIS DE COPLES
# ==========================================

# Directorio de modelos ONNX
MODELOS_DIR=asistente/analisis_coples/Modelos

# Directorio de salida para análisis
SALIDA_DIR=Salida_cople

# IP de la cámara GigE
CAMARA_IP=172.16.1.24

# Umbral de confianza por defecto (0.0 - 1.0)
UMBRAL_CONFIANZA_DEFAULT=0.55

# Umbral IoU por defecto (0.0 - 1.0)
UMBRAL_IOU_DEFAULT=0.35

# Configuración de robustez por defecto
# Opciones: original, moderada, permisiva, ultra_permisiva
CONFIGURACION_ROBUSTEZ_DEFAULT=original

# Tiempo máximo de espera para cámara (segundos)
MAX_TIEMPO_ESPERA_CAMARA=30

# ==========================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ==========================================

# Directorio de archivos media
MEDIA_ROOT=asistente/media

# URL base para archivos media
MEDIA_URL=/media/

# ==========================================
# LOGGING
# ==========================================

# Nivel de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# REDIS (para cache y tareas asíncronas - opcional)
# ==========================================

# URL de Redis (si decides usarlo en el futuro)
# REDIS_URL=redis://localhost:6379/0
